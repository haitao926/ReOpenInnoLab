{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "allowImportingTsExtensions": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@web-student/*": ["src/*"],
      "@shared-utils/*": ["../../packages/shared-utils/src/*"],
      "@ui-kit/*": ["../../packages/ui-kit/src/*"],
      "@acl-sdk/*": ["../../packages/acl-sdk/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ],
  "references": [
    { "path": "../../packages/shared-utils" },
    { "path": "../../packages/ui-kit" },
    { "path": "../../packages/acl-sdk" }
  ]
}