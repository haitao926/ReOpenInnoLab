# 开发环境配置
VITE_NODE_ENV=development

# API 配置
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_ENABLE_MOCK_API=true

# 应用配置
VITE_APP_TITLE=ReOpenInnoLab 教师端
VITE_APP_VERSION=1.0.0

# AI服务配置
VITE_AI_SERVICE_URL=http://localhost:8081
VITE_AI_MODEL=claude-3-sonnet

# 功能开关
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# 调试选项
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_CONSOLE_LOGS=true

# WebSocket配置
VITE_WS_URL=ws://localhost:3002

# 文件上传
VITE_MAX_FILE_SIZE=10485760  # 10MB
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,ppt,pptx,xls,xlsx

# 第三方服务
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
VITE_WECHAT_APP_ID=your_wechat_app_id_here

# 其他配置
VITE_DEFAULT_AVATAR=/images/default-avatar.png
VITE_PUBLIC_PATH=/