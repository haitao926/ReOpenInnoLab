{
  "name": "@reopeninnolab/ui-kit",
  "version": "1.0.0",
  "description": "教育主题UI组件库 - 基于Element Plus深度定制",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:themes",
    "build:themes": "node scripts/build-themes.js",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "type-check": "vue-tsc --noEmit",
    "clean": "rm -rf dist storybook-static"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "@vueuse/core": "^10.6.1",
    "dayjs": "^1.11.10",
    "element-plus": "^2.4.4",
    "framer-motion": "^10.16.16",
    "lodash-es": "^4.17.21",
    "vue": "^3.3.8"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-interactions": "^7.5.3",
    "@storybook/addon-links": "^7.5.3",
    "@storybook/blocks": "^7.5.3",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/vue3": "^7.5.3",
    "@storybook/vue3-vite": "^7.5.3",
    "@types/lodash-es": "^4.17.12",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vitest/ui": "^0.34.6",
    "@vue/test-utils": "^2.4.2",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.16",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.32",
    "sass": "^1.69.5",
    "storybook": "^7.5.3",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.3",
    "vitest": "^0.34.6",
    "vue-tsc": "^2.2.12"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./theme": {
      "import": "./src/theme/index.ts",
      "require": "./src/theme/index.ts",
      "types": "./src/theme/index.ts"
    },
    "./components": {
      "import": "./src/components/index.ts",
      "require": "./src/components/index.ts",
      "types": "./src/components/index.ts"
    },
    "./composables": {
      "import": "./src/composables/index.ts",
      "require": "./src/composables/index.ts",
      "types": "./src/composables/index.ts"
    },
    "./styles": "./src/index.scss"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "keywords": [
    "vue",
    "vue3",
    "element-plus",
    "ui",
    "components",
    "education",
    "theme"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/reopeninnolab.git",
    "directory": "packages/ui-kit"
  }
}