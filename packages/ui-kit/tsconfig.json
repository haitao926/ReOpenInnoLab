{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@ui-kit/*": ["src/*"]
    },
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "composite": true
  },
  "include": [
    "src/**/*",
    "src/theme/tokens.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*spec.ts",
    "**/*test.ts"
  ]
}