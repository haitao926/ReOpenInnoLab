# 开发环境配置
NODE_ENV=development
PORT=3003

# 数据库配置
DATABASE_URL=postgresql://reopenlab:reopenlab_dev_password@localhost:5432/reopenlab_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=reopenlab_dev
DATABASE_USER=reopenlab
DATABASE_PASSWORD=reopenlab_dev_password
DATABASE_SSL=false
DATABASE_LOGGING=true
DATABASE_SYNCHRONIZE=false
DATABASE_MIGRATIONS_RUN=false

# Redis 配置
REDIS_URL=redis://:reopenlab_redis_password@localhost:6379/1
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=reopenlab_redis_password
REDIS_DB=1
REDIS_KEY_PREFIX=course:

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# CORS 配置
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# 限流配置
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# 课程配置
COURSE_MAX_FILE_SIZE=104857600  # 100MB
COURSE_ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,jpg,jpeg,png,gif,mp4,webm
COURSE_DEFAULT_VERSION_PREFIX=v
COURSE_MAX_MODULES_PER_COURSE=100
COURSE_MAX_ACTIVITIES_PER_MODULE=50

# 存储配置
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./uploads

# 日志配置
LOG_LEVEL=debug
LOG_FORMAT=dev