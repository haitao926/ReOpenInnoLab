# 数据库配置
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_NAME=reopeninnolab_identity
DATABASE_SSL=false
DATABASE_LOGGING=true
DATABASE_SYNCHRONIZE=true
DATABASE_MIGRATIONS_RUN=true

# JWT 访问令牌配置
JWT_ACCESS_SECRET=your-super-secret-access-key-at-least-32-characters-long
JWT_ACCESS_EXPIRES_IN=15m

# JWT 刷新令牌配置
JWT_REFRESH_SECRET=your-super-secret-refresh-key-at-least-32-characters-long-different-from-access
JWT_REFRESH_EXPIRES_IN=7d

# JWT 通用配置（向后兼容）
JWT_SECRET=your-super-secret-access-key-at-least-32-characters-long
JWT_REFRESH_SECRET_OLD=your-super-secret-refresh-key-at-least-32-characters-long-different-from-access

# 应用配置
NODE_ENV=development
PORT=3002
API_PREFIX=api/v1

# 限流配置
THROTTLER_TTL=60000
THROTTLER_LIMIT=60
THROTTLER_AUTH_TTL=900000
THROTTLER_AUTH_LIMIT=10

# 密码加密配置
BCRYPT_ROUNDS=12

# CORS 配置
CORS_ORIGIN=http://localhost:3001,http://localhost:5173

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=combined

# 认证提供者配置
OAUTH_GOOGLE_ENABLED=false
OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# 安全配置
SESSION_SECRET=your-session-secret-at-least-32-characters
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Redis 配置（可选，用于会话存储）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 监控配置
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true