# Server Configuration
PORT=3000
NODE_ENV=development

# Service URLs
IDENTITY_SERVICE_URL=http://localhost:3001
COURSE_SERVICE_URL=http://localhost:3002
CLASSROOM_SERVICE_URL=http://localhost:3004
LAB_SERVICE_URL=http://localhost:3005
AI_SERVICE_URL=http://localhost:3006
ASSIGNMENT_SERVICE_URL=http://localhost:3007

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# SSO Configuration
SSO_ENABLED=true
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
DEFAULT_SSO_PROVIDER=google
SSO_AUTO_REDIRECT=false

# CORS Configuration
FRONTEND_URL=http://localhost:3003

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Health Check
HEALTH_CHECK_INTERVAL=30000